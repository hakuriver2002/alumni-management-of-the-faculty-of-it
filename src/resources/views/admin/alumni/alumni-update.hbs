    <script>
        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#imageResult').attr('src', e.target.result);
                    $('#image-area').attr('style', 'display: block;');
                    $('#thumnail-area').attr('style', 'display: none;');

                };
                reader.readAsDataURL(input.files[0]);
            }
        }

        $(function () {
            $('#upload').on('change', function () {
                readURL(input);
            });
        });

        function formatDate(inputDate) {
            let parts = inputDate.split('-');
            let year = parts[0];
            let month = padSingleDigit(parts[1]);
            let day = padSingleDigit(parts[2]);

            // Format the date as "yyyy-MM-dd"
            let formattedDate = `${year}-${month}-${day}`;

            return formattedDate;
        }
        
        function padSingleDigit(date) {
            return date.length === 1 ? '0' + date : date;
        }

        $(document).ready(function () {
            const gender = `{{ alumnus.gender }}`
            $('#gender').children('option').each(function () {
