                                                            <option value="Công nghệ"> Công nghệ </option>
                                                            <option value="AI"> AI </option>
                                                            <option value="Điện tử viễn thông"> Điện tử viễn thông
                                                            </option>
                                                            <option value="Game/Trò chơi điện tử"> Game/Trò chơi
                                                                điện tử </option>
                                                            <option value="Thiết bị thông minh-IoT"> Thiết bị thông
                                                                minh-IoT </option>
                                                            <option value="WorkShop"> WorkShop </option>
                                                            <option value="TalkShow"> TalkShow </option>
                                                            <option value="Triển lãm"> Triển lãm </option>
                                                        </select>
                                                    </div>
                                                    {{!-- Row 2 --}}
                                                    <div class="col-xl-4 col-lg-4 col-md-4 col-sm-4 col-12 mb-3">
