<!DOCTYPE html>
<html lang="en">
<head>
    <title> {{title}} </title>
    <link rel="shortcut icon" href="../img/logo_tdtu.png">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="../assets/css/header-1.css">
    <link rel="stylesheet" href="../assets/css/home.css">
    <link rel="stylesheet" href="../assets/css/detail-event.css">
    <link rel="stylesheet" href="../assets/css/footer.css">

    <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="https://unpkg.com/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
        integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="../assets/js/jquery-3.6.4.min.js"></script>
    <script src="../assets//js/detail-event.js"></script>

    {{> header-1}}
</head>

<body>
    <div class="content">
        {{!-- Flash message --}}
        {{#if messageSuccess}}
        <div class="position-absolute top-0 end-0" style="z-index: 1000; margin: 100px 38px" id="success-alert">
            <div class="col-lg-10 mx-auto mb-3 w-auto">
                <div class="alert alert-success alert-dismissible fade show d-flex align-items-center" role="alert">
                    <svg class="bi flex-shrink-0 me-2 mr-3" width="24" height="24" role="img" aria-label="Warning:">
                        <use xlink:href="#check-circle-fill" />
                    </svg>
                    <div> {{ messageSuccess }} </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        </div>
        {{/if}}

        <section class="detail-event-section" id="detail-event">
            <div class="container">
                {{#with event}}
                <div class="row">
                    <div class="col-xl-12 col-lg-12 col-md-12">
                        <div class="event-top-dts">
                            <div class="event-top-date">
                                <span class="event-month" id="event-month"></span>
                                <span class="event-date" id="event-date"></span>
                            </div>
                            <div class="event-top-dt">
                                <h3 class="event-main-title"> {{ event_title }}  </h3>
                                <div class="event-top-info-status">
                                    <span class="event-type-name">
                                        <i class="fas fa-map-marker-alt"></i> {{ location }}
                                    </span>
                                    <span class="event-type-name details-hr">
                                        <i class="fas fa-calendar me-2"></i>
                                        <span class="ev-event-date" id="time-hold-title">
                                        </span>
                                    </span>
                                    <span class="event-type-name details-hr">
                                        <i class="fas fa-eye me-2"></i> 12.2k
                                    </span>
                                    <span></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-8 event-list">
                        <div class="feature-img">
                            <img src="../uploads/event/{{ banner }}" alt="">
                        </div>
                        <div class="single-event">
                            <div class="content-wrap">
                                <ul class="event-tags mt-10">
                                    <li>
                                        <a href=""> {{ event_tag }} </a>
                                    </li>
                                </ul>
                                <p>
                                    <h2>{{ event_title }}</h2>
                                </p>
                                
                                {{{ description }}}
                            </div>
                            <hr class="solid">
                            <div class="comment-area">
                                <div class="discussion">
                                    <div class="discussion__header">
                                        <div class="authed-user">
                                            <img src="../img/avatars/default-user.jpg" alt="" class="avatar">
                                        </div>
                                        <form id="newcomment__form">
                                            <textarea tabindex="1" cols="150" rows="4" minlength="5" 
                                                required placeholder="Write a comment"
                                            ></textarea>
                                            <div class="newcomment__toolbar">
                                                <button
                                                    id="reset-button" class="button--secondary"
                                                    tabindex="3" type="button"
                                                >
                                                    Reset
                                                </button>
                                                <button
                                                    id="confirm-button" class="button--primary"
                                                    tabindex="2" type="submit"
                                                >
                                                    Comment
                                                </button>
                                            </div>
                                        </form>
                                    </div>
                                    <div class="discussion__comments">
                                        <div class="comment">
                                            <div class="avatar">
                                                <img src="../img/avatars/default-user.jpg" alt="avatar" class="avatar">
                                            </div>
                                            <div class="comment__body">
                                                <div class="comment__author">
                                                    User name
                                                    <time class="comment__date" datetime="2024-03-03 12:00:00">2 weeks</time>
                                                </div>
                                                <div class="comment__text">
                                                    <p>I will prepare Instagram strategy, Liliya will take care about Facebook.
                                                        I will prepare Instagram strategy, Liliya will take care about Facebook.
                                                        I will prepare Instagram strategy, Liliya will take care about Facebook.
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="comment">
                                            <div class="avatar">
                                                <img src="../img/avatars/default-user.jpg" alt="avatar" class="avatar">
                                            </div>
                                            <div class="comment__body">
                                                <div class="comment__author">
                                                    User name
                                                    <time class="comment__date" datetime="2024-03-03 12:00:00">2 weeks</time>
                                                </div>
                                                <div class="comment__text">
                                                    <p>I will prepare Instagram strategy, Liliya will take care about Facebook.</p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="comment">
                                            <div class="avatar">
                                                <img src="../img/avatars/default-user.jpg" alt="avatar" class="avatar">
                                            </div>
                                            <div class="comment__body">
                                                <div class="comment__author">
                                                    User name
                                                    <time class="comment__date" datetime="2024-03-03 12:00:00">2 weeks</time>
                                                </div>
                                                <div class="comment__text">
                                                    <p>I will prepare Instagram strategy, Liliya will take care about Facebook.</p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="comment">
                                            <div class="avatar">
                                                <img src="../img/avatars/default-user.jpg" alt="avatar" class="avatar">
                                            </div>
                                            <div class="comment__body">
                                                <div class="comment__author">
                                                    User name
                                                    <time class="comment__date" datetime="2024-03-03 12:00:00">2 weeks</time>
                                                </div>
                                                <div class="comment__text">
                                                    <p>I will prepare Instagram strategy, Liliya will take care about Facebook.</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 event-info">
                        <div class="container-event">
                            <div class="title-event">
                                <h4>Thông tin sự kiện</h4>
                            </div>
                            <ul class="content-event">
                                <li>
                                    <i class="fas fa-map-marker-alt"></i>
                                    <h5>Địa điểm:</h5>
                                    <p>{{ location }}</p>
                                </li>
                                <li>
                                    <i class="fas fa-envelope"></i>
                                    <h5>Email liên hệ: </h5>
                                    <p> {{ contact_email }} </p>
                                </li>
                                <li>
                                    <i class="fas fa-phone"></i>
                                    <h5>Số điện thoại: </h5>
                                    <p>{{ contact_tel }}</p>
                                </li>
                                <li>
                                    <i class="far fa-calendar-check"></i>
                                    <h5>Thời gian: </h5>
                                    <p id="time-hold"></p>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                {{/with}}
            </div>
        </section>
    </div>
    <script>
        $(document).ready(function () {
            {{#with event}}
            const ds =  new Date(`{{ start_date }}`);
            const day = ds.getDate() + "/" + (ds.getMonth() + 1) + "/" + ds.getFullYear();
            $('#time-hold').html("{{start_time}} " + day);
            $('#time-hold-title').html(day);
            $('#event-month').html("TH " + (ds.getMonth() + 1));
            $('#event-date').html(" " + ds.getDate())
            {{/with}}
        })
    </script>
</body>
{{> footer}}

</html>
