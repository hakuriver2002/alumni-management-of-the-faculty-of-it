<!DOCTYPE html>
<html lang="en">
<head>
    <title> {{title}} </title>
    <link rel="shortcut icon" href="./img/logo_tdtu.png">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    {{!--
    <link rel="stylesheet" href="./assets/css/header-1.css"> --}}
    <link rel="stylesheet" href="./assets/css/home.css">
    <link rel="stylesheet" href="./assets/css/event.css">
    <link rel="stylesheet" href="./assets/css/footer.css">
    <link rel="stylesheet" href="./assets/css/flash.css">

    <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://unpkg.com/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
        integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="./assets/js/jquery-3.6.4.min.js"></script>

    {{> header-1}}
</head>

<body>
<div class="content">
    {{!-- Icon flash message --}}
    <svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
        <symbol id="check-circle-fill" fill="currentColor" viewBox="0 0 16 16">
            <path
                d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
        </symbol>
        <symbol id="info-fill" fill="currentColor" viewBox="0 0 16 16">
            <path
                d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2z" />
        </symbol>
        <symbol id="exclamation-triangle-fill" fill="currentColor" viewBox="0 0 16 16">
            <path
                d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
        </symbol>
    </svg>
    {{!-- Flash message --}}
    {{#if messageSuccess}}
    <div class="notification_success">
        <div class="notification__body">
            <svg class="bi flex-shrink-0 me-2 mr-3" width="24" height="24" role="img" aria-label="Success:">
                <use xlink:href="#check-circle-fill" />
            </svg>
            {{ messageSuccess }}
        </div>
        <div class="notification__progress_1"></div>
    </div>
    {{/if}}

    {{#if messageError}}
    <div class="notification_error">
        <div class="notification__body">
            <svg class="bi flex-shrink-0 me-2 mr-3" width="24" height="24" role="img" aria-label="Error:">
                <use xlink:href="#exclamation-triangle-fill" />
            </svg>
            {{ messageError }}
        </div>
        <div class="notification__progress_3"></div>
    </div>
    {{/if}}

    {{!-- Profile page --}}
    <section class="profile-section" id="profile" style="background-color: #eee;">
        {{#with user}}
        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    <div class="card mb-4">
                        <div class="card-body text-center">
                            <img src="./uploads/avatar/{{avatar_url}}" alt="avatar" class="rounded-circle img-fluid"
                                style="width: 150px;">
                            <h5 class="my-3">{{ fullname }}</h5>
                            <p class="text-muted mb-1" style="color: #386bc0;">{{#eq role 'client'}}
                                {{roleLabel 'client'}}
                                {{else}}
                                {{roleLabel 'admin'}}
                                {{/eq}}</p>
                            <p class="text-muted mb-4"> {{batch}} - {{ major }}</p>
                            <div class="d-flex justify-content-center mb-2">
                                <button class="btn btn-primary"> Liên hệ</button>
                                <button class="btn btn-outline-primary ms-4">Nhắn tin</button>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="col-lg-5">
                    <div class="card mb-4">
                        <div class="card-body">
                            <div class="col-12 mb-4">
                                <h6 class="mb-2 text-primary">Thông tin cơ bản</h6>
                            </div>
                            <div class="row">
                                <div class="col-sm-5">
                                    <p class="mb-0">Họ và tên:</p>
                                </div>
                                <div class="col-sm-7">
                                    <p class="text-muted mb-0">{{fullname}}</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-5">
                                    <p class="mb-0">Email:</p>
                                </div>
                                <div class="col-sm-7">
                                    <p class="text-muted mb-0">{{email}}</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-5">
                                    <p class="mb-0">Ngày sinh:</p>
                                </div>
                                <div class="col-sm-7">
                                    <p class="text-muted mb-0" id="birthday"></p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-5">
                                    <p class="mb-0">Giới tính:</p>
                                </div>
                                <div class="col-sm-7">
                                    {{#ifeq gender "male"}}
                                    <p class="text-muted mb-0">Nam</p>
                                    {{/ifeq}}
                                    {{#ifeq gender "female"}}
                                    <p class="text-muted mb-0">Nữ</p>
                                    {{/ifeq}}
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-5">
                                    <p class="mb-0">Chuyên ngành:</p>
                                </div>
                                <div class="col-sm-7">
                                    <p class="text-muted mb-0">{{major}}</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-5">
                                    <p class="mb-0">Lớp:</p>
                                </div>
                                <div class="col-sm-7">
                                    <p class="text-muted mb-0">{{class}}</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-5">
                                    <p class="mb-0">Khóa:</p>
                                </div>
                                <div class="col-sm-7">
                                    <p class="text-muted mb-0">{{batch}}</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-5">
                                    <p class="mb-0">Năm Tốt nghiệp:</p>
                                </div>
                                <div class="col-sm-7">
                                    <p class="text-muted mb-0">{{passing_year}}</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-5">
                                    <p class="mb-0">Số điện thoại:</p>
                                </div>
                                <div class="col-sm-7">
                                    <p class="text-muted mb-0">{{tel}}</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-5">
                                    <p class="mb-0">Địa chỉ:</p>
                                </div>
                                <div class="col-sm-7">
                                    <p class="text-muted mb-0">{{address}}</p>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="card mb-4">
                        <div class="card-body">
                            <div class="col-12 mb-4">
                                <h6 class="mb-2 text-primary">Công việc hiện tại</h6>
                            </div>
                            <div class="row">
                                <div class="col-sm-5">
                                    <p class="mb-0">Tên công ty:</p>
                                </div>
                                <div class="col-sm-7">
                                    <p class="text-muted mb-0">{{company}}</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-5">
                                    <p class="mb-0">Vị trí:</p>
                                </div>
                                <div class="col-sm-7">
                                    <p class="text-muted mb-0">{{job_type}}</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-5">
                                    <p class="mb-0">Ngày vào làm:</p>
                                </div>
                                <div class="col-sm-7">
                                    <p class="text-muted mb-0" id="join_date"></p>
                                </div>
                            </div>
                        </div>

                    </div>
                    <button class="btn btn-primary" title="Settings"  data-bs-toggle="modal"
                        data-bs-target="#updateModal" data-id="{{ id }}" data-fullname="{{ fullname }}"
                        data-class="{{ class }}" data-email="{{ email }}" data-tel="{{ tel }}"
                        data-batch="{{ batch }}">
                        <i class="fa fa-edit"></i>
                        Cập nhật thông tin
                    </button>
                </div>
            </div>

            <!-- Modal Update -->
            <div id="updateModal" class="modal fade" tabindex="-1" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <form method="post" action="">
                            <div class="modal-header">
                                <h6 class="modal-title text-capitalize">Cập nhật thông tin tài khoản</h6>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>

                            <div class="modal-body">
                                <div class="row">
                                    <div class="col-12 mb-3">
                                        <label class="form-label text-xs font-weight-bolder" for="fullname">Họ và
                                            tên</label>
                                        <div class="input-group input-group-outline">
                                            <input type="text" class="form-control" id="fullname" name="fullname"
                                                required value="{{fullname}}">
                                        </div>
                                    </div>
                                    <div class="col-12 mb-3">
                                        <label class="form-label text-xs font-weight-bolder" for="tel">Số điện
                                            thoại</label>
                                        <div class="input-group input-group-outline">
                                            <input type="number" class="form-control" id="tel" name="tel"
                                                required value="{{tel}}">
                                        </div>
                                    </div>
                                    <div class="col-xl-7 col-lg-7 col-md-7 col-sm-7 col-12 mb-3">
                                        <label class="form-label text-xs font-weight-bolder" for="major">Chuyên ngành</label>
                                        <div class="input-group input-group-outline">
                                            <input type="text" class="form-control" id="major" name="major"
                                                required value="{{major}}">
                                        </div>
                                    </div>
                                    <div class="col-xl-5 col-lg-5 col-md-5 col-sm-5 col-12 mb-3">
                                        <label class="form-label text-sm" for="gender">Giới
                                                            Tính</label>
                                        <select class="form-select px-3" id="gender" name="gender">
                                            <option value=""></option>
                                            <option value="male"> Nam </option>
                                            <option value="female"> Nữ </option>
                                        </select>
                                    </div>
                                    <div class="col-12 mb-3">
                                        <label class="form-label text-sm" for="birthday">
                                            Ngày sinh</label>
                                        <div class="input-group">
                                            <input type="date" class="form-control text-sm px-3" id="birthday1"
                                                name="birthday">
                                        </div>
                                    </div>
                                    <div class="col-12 mb-3">
                                        <label class="form-label text-xs font-weight-bolder" for="address">Địa chỉ</label>
                                        <div class="input-group input-group-outline">
                                            <input type="text" class="form-control" id="address" name="address"
                                                required value="{{address}}">
                                        </div>
                                    </div>
                                    <div class="col-12 mb-3">
                                        <label class="form-label text-xs font-weight-bolder" for="company">Tên công ty</label>
                                        <div class="input-group input-group-outline">
                                            <input type="text" class="form-control" id="company" name="company"
                                                required value="{{company}}">
                                        </div>
                                    </div>
                                    <div class="col-12 mb-3">
                                        <label class="form-label text-xs font-weight-bolder" for="job_type">Vị trí</label>
                                        <div class="input-group input-group-outline">
                                            <input type="text" class="form-control" id="job_type" name="job_type"
                                                required value="{{job_type}}">
                                        </div>
                                    </div>
                                    <div class="col-12 mb-3">
                                        <label class="form-label text-sm" for="join_date">
                                            Ngày vào làm</label>
                                        <div class="input-group">
                                            <input type="date" class="form-control text-sm px-3" id="join_date1"
                                                name="join_date">
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="modal-footer">
                                <a class="btn btn-secondary text-white" data-bs-dismiss="modal"> 
                                    <span>Đóng</span>
                                </a>
                                <button class="btn btn-primary text-white" type="submit">
                                    <span>Cập nhật</span>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        {{/with}}
    </section>

    {{!--
    <script src="./js/event.js"></script> --}}
    <script>
        function formatDate(inputDate) {
            let parts = inputDate.split('-');
            let year = parts[0];
            let month = padSingleDigit(parts[1]);
            let day = padSingleDigit(parts[2]);

            // Format the date as "yyyy-MM-dd"
            let formattedDate = `${year}-${month}-${day}`;

            return formattedDate;
        }
        
        function padSingleDigit(date) {
            return date.length === 1 ? '0' + date : date;
        }

        $(document).ready(function () {
            {{#with user}}
            const gender = `{{ gender }}`
            $('#gender').children('option').each(function () {
                if ($(this).val() === gender) {
                    $(this).attr('selected', true);
                } else {
                    $(this).selected = false;
                }
            })

            // get date format
            {{#if birthday}}
                const d = new Date(`{{ birthday }}`);
                const birth_d_format = d.getFullYear() + "-" + (d.getMonth() + 1) + "-" + d.getDate();
                
                $('#birthday').html(d.getDate() + "-" + (d.getMonth() + 1) + "-" + d.getFullYear());
                $('#birthday1').val(formatDate(birth_d_format));
            {{/if}}

            {{#if join_date}}
                const jd = new Date(`{{ join_date }}`);
                const join_d_format = jd.getFullYear() + "-" + (jd.getMonth() + 1) + "-" + jd.getDate();

                $('#join_date').html(jd.getDate() + "-" + (jd.getMonth() + 1) + "-" + jd.getFullYear());
                $('#join_date1').val(formatDate(join_d_format));
            {{/if}}
                
            {{/with}}
        });
    </script>
    <script src="./assets/js/core/bootstrap.min.js"></script>

</div>


{{> footer}}
    
</body>
</html>