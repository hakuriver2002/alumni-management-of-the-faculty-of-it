<!DOCTYPE html>
<html lang="en">
<head>
    <title> {{title}} </title>
    <link rel="shortcut icon" href=".../img/logo_tdtu.png">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="../assets/css/header-1.css">
    <link rel="stylesheet" href="../assets/css/home.css">
    <link rel="stylesheet" href="../assets/css/detail-job.css">
    <link rel="stylesheet" href="../assets/css/footer.css">

    <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="https://unpkg.com/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
        integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="../assets/js/jquery-3.6.4.min.js"></script>
    
    {{> header-1}}
</head>

<body>
    <div class="content">
        {{!-- Flash message --}}
        {{#if messageSuccess}}
        <div class="position-absolute top-0 end-0" style="z-index: 1000; margin: 100px 38px" id="success-alert">
            <div class="col-lg-10 mx-auto mb-3 w-auto">
                <div class="alert alert-success alert-dismissible fade show d-flex align-items-center" role="alert">
                    <svg class="bi flex-shrink-0 me-2 mr-3" width="24" height="24" role="img" aria-label="Warning:">
                        <use xlink:href="#check-circle-fill" />
                    </svg>
                    <div> {{ messageSuccess }} </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        </div>
        {{/if}}

        <section class="detail-job-section" id="detail-job">
            {{#with job}}
            <div class="container">
                <div class="job-detail__left">
                    <div class="content-left">
                        <div class="box-1">
                            <h2 class="title my-4">Chi tiết tuyển dụng</h2>
                            {{{ description }}}
                        </div>
                        <div class="box-2">
                            <h2 class="job-position"> {{ job_title }} </h2>
                            <div class="job-section">
                                <div class="job_info_section">
                                    <i class="fas fa-money-bill-alt"></i>
                                    <div class="section-content">
                                        <h3>Mức lương</h3>
                                        <p> {{ salary }} <span>/Tháng</span></p>
                                    </div>
                                </div>
                                <div class="job_info_section">
                                    <i class="fas fa-map-marker-alt"></i>
                                    <div class="section-content">
                                        <h3>Địa điểm</h3>
                                        <p> {{ location }} </p>
                                    </div>
                                </div>
                                <div class="job_info_section">
                                    <i class="fas fa-hourglass-half"></i>
                                    <div class="section-content">
                                        <h3>Kinh nghiệm</h3>
                                        <p>1 năm</p>
                                    </div>
                                </div>
                            </div>      
                            <div class="job-apply-button">          
                                <a href="#">
                                    <i class="fas fa-paper-plane "></i>
                                    Ứng tuyển
                                
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="job-detail__right">
                    <div class="content-right">
                        <div class="box-1">
                            <div class="company-info">
                                <div class="company-name">
                                    <a href="" class="company-logo"><img src="../uploads/job/default-logo-company.png" alt=""></a>
                                    <h2 class="company-name-label"> {{ company }} </h2>
                                </div>
                                <div class="company-scale">
                                    <div class="company-scale-title">
                                        <p><i class="fas fa-users"></i>Quy mô: </p>
                                    </div>
                                    <div class="company-scale-value">25 - 99 nhân viên</div>
                                </div>
                                <div class="company-address">
                                    <div class="company-address-title"> 
                                        <p><i class="fas fa-map-marker-alt"></i>Địa điểm: </p>
                                    </div>
                                    <div class="company-address-value"> {{ location }} </div>
                                </div>
                            </div>
                            <div class="company-link">
                                <a href="">Xem trang công ty</a>
                                <i class="fas fa-arrow-up-right-from-square"></i>
                            </div>
                        </div>
                        <div class="box-2">
                            <div class="suggest-company">
                                <div class="suggest-title">
                                    <h2>Gợi ý việc làm phụ hợp</h2>
                                </div>
                                <div class="suggest-card">
                                    <div class="suggest-card-info">
                                        <div class="card-avatar">
                                            <img src="../uploads/job/default-logo-company.png" alt="logo">
                                        </div>
                                        <div class="card-general">
                                            <h3>vị trí</h3>
                                            <h4>Tên công ty</h4>
                                        </div>
                                    </div>
                                </div>
                                <div class="suggest-card">
                                    <div class="suggest-card-info">
                                        <div class="card-avatar">
                                            <img src="../uploads/job/default-logo-company.png" alt="logo">
                                        </div>
                                        <div class="card-general">
                                            <h3>vị trí</h3>
                                            <h4>Tên công ty</h4>
                                        </div>
                                    </div>
                                </div>
                                <div class="suggest-card">
                                    <div class="suggest-card-info">
                                        <div class="card-avatar">
                                            <img src="../uploads/job/default-logo-company.png" alt="logo">
                                        </div>
                                        <div class="card-general">
                                            <h3>vị trí</h3>
                                            <h4>Tên công ty</h4>
                                        </div>
                                    </div>
                                </div>
                                <div class="suggest-card">
                                    <div class="suggest-card-info">
                                        <div class="card-avatar">
                                            <img src="../uploads/job/default-logo-company.png" alt="logo">
                                        </div>
                                        <div class="card-general">
                                            <h3>vị trí</h3>
                                            <h4>Tên công ty</h4>
                                        </div>
                                    </div>
                                </div>
                                <div class="suggest-card">
                                    <div class="suggest-card-info">
                                        <div class="card-avatar">
                                            <img src="../uploads/job/default-logo-company.png" alt="logo">
                                        </div>
                                        <div class="card-general">
                                            <h3>vị trí</h3>
                                            <h4>Tên công ty</h4>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="company-link"></div>
                        </div>
                    </div>
                </div>
            </div>
            {{/with}}
        </section>
    </div>
</body>

{{>footer}}

</html>