<header>
    <div class="background">
        <div class="menu__wrapper">
            <div class="menu__bar">
                <a href="#" title="Logo" class="logo">
                    <svg width="1103" height="996" viewBox="0 0 1103 996" fill="none"
                        xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" clip-rule="evenodd"
                            d="M410.988 255.56L0 995.337H189.802L505.141 427.427L410.988 255.56ZM1102.94 995.337L647.119 170.373L551.471 0L457.317 170.373L551.471 340.746L711.79 629.718H498.683L405.461 786.972H799.034L914.634 995.337H1102.94Z"
                            fill="#FAFBFC" />
                        <path fill-rule="evenodd" clip-rule="evenodd"
                            d="M410.988 255.56L0 995.337H189.802L505.141 427.427L410.988 255.56ZM1102.94 995.337L647.119 170.373L551.471 0L457.317 170.373L551.471 340.746L711.79 629.718H498.683L405.461 786.972H799.034L914.634 995.337H1102.94Z"
                            fill="#FAFBFC" />
                    </svg>

                </a>
                <a href="#" title="Header" style="text-decoration: none;">
                    <h3>Alumni Management System</h3>
                </a>
                <img class="menu-icon" src="" title='Burger Menu' alt='Burger Menu' onclick="toggleMenu(this)">
                <ul class="navigation">
                    {{#unless currentUser}}
                    <li>
                        <a href="#about" title="About">
                            Giới thiệu
                        </a>
                    </li>
                    <li>
                        <a href="#team" title="Team">
                            Nhóm Chúng Tôi
                        </a>
                    </li>
                    {{/unless}}
                    {{#if currentUser}}
                    <li>
                        <a href="./home#events" title="Event List">
                            Sự Kiện
                        </a>
                    </li>
                    {{/if}}
                    <li>
                        <a href="#gallery" title="Gallery">
                            Thư Viện
                        </a>
                    </li>
                    <li>
                        <a href="#contact" title="Contact Us">
                            Liên Hệ
                        </a>
                    </li>
                    {{#if currentUser}}
                    <li>
                        <a href="./jobs" title="Job List">
                            Việc Làm
                        </a>
                    </li>
                    <li>
                        <a href="./alum" title="Alumni List">
                            Cựu Sinh Viên
                        </a>
                    </li>
                    {{/if}}
                </ul>

                <div class="action-buttons">
                    {{#unless currentUser}}
                    <a href="login" title="Log in" class="btn-login">
                        Đăng Nhập
                    </a>
                    <a href="signup" title="Sign up" class="btn-signup">
                        Đăng Ký
                    </a>
                    {{/unless}}
                    {{#if currentUser}}
                    <a href="profile" title="Full Name" class="btn-name">
                        {{ currentUser.fullname }}
                    </a>
                    <a href="logout" title="Log out" class="btn-logout">
                        Đăng xuất
                    </a>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</header>


<script>
    const toggleMenu = () => {
        const navigation = document.querySelector(".navigation");

        const burgerMenu = document.querySelector(".menu-icon");
        const src = burgerMenu.getAttribute("src");

        const isBurger = src === "assets/burger-menu.svg";
        const iconName = isBurger ? "assets/close.svg" : "assets/burger-menu.svg";

        burgerMenu.setAttribute("src", iconName);

        if (!isBurger) {
            navigation.classList.add("navigation--mobile--fadeout");
            setTimeout(() => {
                navigation.classList.toggle("navigation--mobile");
            }, 300);
        } else {
            navigation.classList.remove("navigation--mobile--fadeout");
            navigation.classList.toggle("navigation--mobile");
        }
    };
</script>